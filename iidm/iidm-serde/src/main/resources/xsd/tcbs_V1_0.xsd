<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:tcb="http://www.powsybl.org/schema/iidm/ext/tcbs/1_0"
           targetNamespace="http://www.powsybl.org/schema/iidm/ext/tcbs/1_0"
           elementFormDefault="qualified">
    <xs:complexType name="MeasurementPoint">
        <xs:sequence>
            <xs:element name="busbarSectionOrBusId" type="xs:string" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="id" use="required" type="xs:string"/>
    </xs:complexType>
    <xs:complexType name="ControlVoltageLevel">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="forceOneTransformerLoads" use="optional" type="xs:boolean"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="Tcb">
        <xs:sequence>
            <xs:element name="measurementPoint" type="tcb:MeasurementPoint" minOccurs="1" maxOccurs="unbounded"/>
            <xs:element name="controlVoltageLevel" type="tcb:ControlVoltageLevel" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="name" use="required" type="xs:string"/>
    </xs:complexType>
    <xs:element name="tcbs">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="tcb" type="tcb:Tcb" minOccurs="1" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
