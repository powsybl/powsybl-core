<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:smacc="http://www.powsybl.org/schema/iidm/ext/smaccs/1_0"
           targetNamespace="http://www.powsybl.org/schema/iidm/ext/smaccs/1_0"
           elementFormDefault="qualified">
    <xs:complexType name="MeasurementPoint">
        <xs:sequence>
            <xs:element name="busbarSectionOrBusId" type="xs:string" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="ControlVoltageLevel">
        <xs:simpleContent>
            <xs:extension base="xs:string"/>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="Smacc">
        <xs:sequence>
            <xs:element name="highVoltageMeasurementPoint" type="smacc:MeasurementPoint" minOccurs="1" maxOccurs="1"/>
            <xs:element name="lowVoltageMeasurementPoint" type="smacc:MeasurementPoint" minOccurs="1" maxOccurs="1"/>
            <xs:element name="highVoltageControlVoltageLevel" type="smacc:ControlVoltageLevel" minOccurs="1" maxOccurs="unbounded"/>
            <xs:element name="lowVoltageControlVoltageLevel" type="smacc:ControlVoltageLevel" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="name" use="required" type="xs:string"/>
    </xs:complexType>
    <xs:element name="smaccs">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="smacc" type="smacc:Smacc" minOccurs="1" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
