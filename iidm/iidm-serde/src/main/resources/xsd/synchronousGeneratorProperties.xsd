<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.powsybl.org/schema/iidm/ext/synchronous_generator_properties/1_0"
           elementFormDefault="qualified">
    <xs:element name="synchronousGeneratorProperties">
        <xs:complexType>
            <xs:attribute name="numberOfWindings" use="required" type="xs:int"/>
            <xs:attribute name="governor" use="required" type="xs:string"/>
            <xs:attribute name="voltageRegulator" use="required" type="xs:string"/>
            <xs:attribute name="pss" use="required" type="xs:string"/>
            <xs:attribute name="auxiliaries" use="required" type="xs:boolean"/>
            <xs:attribute name="internalTransformer" use="required" type="xs:boolean"/>
            <xs:attribute name="rpcl" use="required" type="xs:boolean"/>
            <xs:attribute name="rpcl2" use="required" type="xs:boolean"/>
            <xs:attribute name="uva" use="required" type="xs:string"/>
            <xs:attribute name="fictitious" use="required" type="xs:boolean"/>
            <xs:attribute name="qlim" use="required" type="xs:boolean"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
