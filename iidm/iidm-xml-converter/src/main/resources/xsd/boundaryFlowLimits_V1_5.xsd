<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:iidm="http://www.powsybl.org/schema/iidm/1_5"
           targetNamespace="http://www.powsybl.org/schema/iidm/ext/boundary_flow_limits/1_0"
           elementFormDefault="qualified">
    <xs:import namespace="http://www.powsybl.org/schema/iidm/1_5" schemaLocation="iidm_V1_5.xsd"/>
    <xs:element name="boundaryFlowLimits">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="activePowerLimits" type="iidm:LoadingLimit" minOccurs="0"/>
                <xs:element name="apparentPowerLimits" type="iidm:LoadingLimit" minOccurs="0"/>
                <xs:element name="currentLimits" type="iidm:LoadingLimit" minOccurs="0"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
