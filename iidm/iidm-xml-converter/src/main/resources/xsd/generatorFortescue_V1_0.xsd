           targetNamespace="http://www.powsybl.org/schema/iidm/ext/generator_fortescue/1_0"
           elementFormDefault="qualified">
    <xs:element name="generatorFortescue">
        <xs:complexType>
            <xs:attribute name="rz" type="xs:double"/>
            <xs:attribute name="xz" type="xs:double"/>
            <xs:attribute name="rn" type="xs:double"/>
            <xs:attribute name="xn" type="xs:double"/>
