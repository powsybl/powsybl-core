<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:svc="http://www.powsybl.org/schema/iidm/ext/generator_fortescue/1_0"
           targetNamespace="http://www.powsybl.org/schema/iidm/ext/generator_fortescue/1_0"
           elementFormDefault="qualified">
    <xs:element name="generatorFortescue">
        <xs:complexType>
            <xs:attribute name="generatorType" use="required" type="xs:string"/>
            <xs:attribute name="ro" type="xs:double"/>
            <xs:attribute name="xo" type="xs:double"/>
            <xs:attribute name="ri" type="xs:double"/>
            <xs:attribute name="xi" type="xs:double"/>
            <xs:attribute name="toGround" use="required" type="xs:boolean"/>
            <xs:attribute name="groundingR" use="required" type="xs:double"/>
            <xs:attribute name="groundingX" use="required" type="xs:double"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
